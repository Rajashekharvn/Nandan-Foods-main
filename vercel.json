{
    "version": 2,
    "rewrites": [
        {
            "source": "/api/(.*)",
            "destination": "/server/server.js"
        },
        {
            "source": "/(.*)",
            "destination": "/client/index.html"
        }
    ],
    "functions": {
        "server/server.js": {
            "maxDuration": 10
        }
    }
}